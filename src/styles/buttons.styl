.button {
  display: inline-block
  margin: 1em .4em
  padding: 0.8em 1em

  cursor: pointer

  background: _color-deep-purple-500
  color: #FFFFFF
  font-weight: 600
  border: 0
  border-radius: 5px

  text-shadow: 1px 2px 3px rgba(0,0,0,0.3)
  text-decoration: none

  box-shadow: 0px 3px 10px rgba(0,0,0,0.2);

  transition: background .5s

  &:hover {
    background: _color-deep-purple-700
    box-shadow: 0 0 20px rgba(0,0,0,0.2) inset
  }

  &.btn-s {
    font-size 1em
  }

  &.btn-m {
    font-size 1.2em
  }

  &.btn-l {
    font-size 1.6em
  }

  &.btn-block {
    display: block
    width: 100%
    margin-left: 0
    margin-right: 0
    padding-left: 0
    padding-right: 0
  }
}
